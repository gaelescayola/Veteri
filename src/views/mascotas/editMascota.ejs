<div class="box">
    <h1 class="title">Editar Mascota</h1>
    <form action="/mascotas/edit/<%= mascota.id %>" method="POST">
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="name" value="<%= mascota.name %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Especie</label>
            <div class="control">
                <input class="input" type="text" name="species" value="<%= mascota.species %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Edad</label>
            <div class="control">
                <input class="input" type="number" name="age" value="<%= mascota.age %>" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar Cambios</button>
        </div>
    </form>
</div>
