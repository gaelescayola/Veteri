<div class="box">
    <h1 class="title">Agregar Mascota</h1>
    <form action="/mascotas/create" method="POST">
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="name" placeholder="Nombre de la mascota" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Especie</label>
            <div class="control">
                <input class="input" type="text" name="species" placeholder="Especie de la mascota" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Edad</label>
            <div class="control">
                <input class="input" type="number" name="age" placeholder="Edad de la mascota" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar</button>
        </div>
    </form>
</div>
