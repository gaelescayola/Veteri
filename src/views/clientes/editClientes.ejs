<div>
    <h1 class="title">Editar Cliente</h1>
    <form action="/clientes/edit/<%= client.id %>" method="POST">
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="name" value="<%= client.name %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" type="email" name="email" value="<%= client.email %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Tel√©fono</label>
            <div class="control">
                <input class="input" type="text" name="phone" value="<%= client.phone %>" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar Cambios</button>
        </div>
    </form>
</div>
