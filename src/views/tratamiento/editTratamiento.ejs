<div class="box">
    <h1 class="title">Editar Tratamiento</h1>
    <form action="/tratamientos/edit/<%= tratamiento.id %>" method="POST">
        <div class="field">
            <label class="label">Nombre del Tratamiento</label>
            <div class="control">
                <input class="input" type="text" name="name" value="<%= tratamiento.name %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Descripción</label>
            <div class="control">
                <textarea class="textarea" name="description" required><%= tratamiento.description %></textarea>
            </div>
        </div>
        <div class="field">
            <label class="label">Fecha de Aplicación</label>
            <div class="control">
                <input class="input" type="date" name="date" value="<%= tratamiento.date %>" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar Cambios</button>
        </div>
    </form>
</div>
