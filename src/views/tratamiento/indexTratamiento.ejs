<div>
    <h1 class="title">Tratamientos</h1>
    <a href="/tratamientos/create" class="button is-primary mb-4">Agregar Tratamiento</a>
    <table class="table is-fullwidth is-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Fecha de Aplicación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% tratamientos.forEach((tratamiento, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= tratamiento.name %></td>
                    <td><%= tratamiento.description %></td>
                    <td><%= tratamiento.date %></td>
                    <td>
                        <a href="/tratamientos/edit/<%= tratamiento.id %>" class="button is-small is-info">Editar</a>
                        <button 
                            class="button is-small is-danger" 
                            onclick="confirmDelete(<%= tratamiento.id %>)"
                        >
                            Eliminar
                        </button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(tratamientoId) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "¡No podrás revertir esta acción!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/tratamientos/delete/${tratamientoId}`;
            }
        });
    }
</script>
