<div class="box">
    <h1 class="title">Editar Vacuna</h1>
    <form action="/vacunas/edit/<%= vacuna.id %>" method="POST">
        <div class="field">
            <label class="label">Nombre de la Vacuna</label>
            <div class="control">
                <input class="input" type="text" name="name" value="<%= vacuna.name %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Descripción</label>
            <div class="control">
                <textarea class="textarea" name="description" required><%= vacuna.description %></textarea>
            </div>
        </div>
        <div class="field">
            <label class="label">Fecha de Aplicación</label>
            <div class="control">
                <input class="input" type="date" name="date" value="<%= vacuna.date %>" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar Cambios</button>
        </div>
    </form>
</div>
