<div class="box">
    <h1 class="title">Agregar Cita</h1>
    <form action="/citas/create" method="POST">
        <div class="field">
            <label class="label">Fecha y Hora</label>
            <div class="control">
                <input class="input" type="datetime-local" name="date_time" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Cliente</label>
            <div class="control">
                <select class="input" name="cliente_id" required>
                    <% clientes.forEach((cliente) => { %>
                        <option value="<%= cliente.id %>"><%= cliente.name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="field">
            <label class="label">Mascota</label>
            <div class="control">
                <select class="input" name="mascota_id" required>
                    <% mascotas.forEach((mascota) => { %>
                        <option value="<%= mascota.id %>"><%= mascota.nombre %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="field">
            <label class="label">Servicio</label>
            <div class="control">
                <select class="input" name="servicio_id" required>
                    <% servicios.forEach((servicio) => { %>
                        <option value="<%= servicio.id %>"><%= servicio.nombre %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar</button>
        </div>
    </form>
</div>
