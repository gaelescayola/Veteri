<div class="box">
    <h1 class="title">Editar Cita</h1>
    <form action="/citas/edit/<%= cita.id %>" method="POST">
        <div class="field">
            <label class="label">Fecha y Hora</label>
            <div class="control">
                <input class="input" type="datetime-local" name="date_time" value="<%= cita.date_time %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Cliente</label>
            <div class="control">
                <select class="input" name="cliente_id" required>
                    <% clientes.forEach((cliente) => { %>
                        <option value="<%= cliente.id %>" <%= cliente.id == cita.cliente_id ? 'selected' : '' %>><%= cliente.name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="field">
            <label class="label">Mascota</label>
            <div class="control">
                <select class="input" name="mascota_id" required>
                    <% mascotas.forEach((mascota) => { %>
                        <option value="<%= mascota.id %>" <%= mascota.id == cita.mascota_id ? 'selected' : '' %>><%= mascota.nombre %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="field">
            <label class="label">Servicio</label>
            <div class="control">
                <select class="input" name="servicio_id" required>
                    <% servicios.forEach((servicio) => { %>
                        <option value="<%= servicio.id %>" <%= servicio.id == cita.servicio_id ? 'selected' : '' %>><%= servicio.nombre %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar Cambios</button>
        </div>
    </form>
</div>
