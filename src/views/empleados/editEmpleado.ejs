<div class="box">
    <h1 class="title">Editar Empleado</h1>
    <form action="/empleados/edit/<%= empleado.id %>" method="POST">
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="name" value="<%= empleado.name %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" type="email" name="email" value="<%= empleado.email %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Tel√©fono</label>
            <div class="control">
                <input class="input" type="text" name="phone" value="<%= empleado.phone %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Puesto</label>
            <div class="control">
                <input class="input" type="text" name="position" value="<%= empleado.position %>" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar Cambios</button>
        </div>
    </form>
</div>
