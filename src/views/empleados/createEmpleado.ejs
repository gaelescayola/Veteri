<div class="box">
    <h1 class="title">Agregar Empleado</h1>
    <form action="/empleados/create" method="POST">
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="name" placeholder="Nombre completo" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" type="email" name="email" placeholder="Correo electrónico" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Teléfono</label>
            <div class="control">
                <input class="input" type="text" name="phone" placeholder="Número de teléfono" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Puesto</label>
            <div class="control">
                <input class="input" type="text" name="position" placeholder="Puesto de trabajo" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar</button>
        </div>
    </form>
</div>
